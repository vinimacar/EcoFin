    "type": "git",
    "url": "https://github.com/seu-usuario/ecofin.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/ecofin/issues"
  },
  "homepage": "https://ecofin.vercel.app",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@vercel/node": "^3.0.0",
    "eslint": "^8.0.0",
    "html-validate": "^8.0.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "lighthouse": "^11.0.0",
    "prettier": "^3.0.0",
